{
    "$id": "http://www.drombler.org/drombler-media-core/MediaStorageConfig.json",
    "type": "object",
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "mediaStorageConfigurations": {
            "$id": "/properties/mediaStorageConfigurations",
            "type": "array",
            "items": {
                "$id": "/properties/mediaStorageConfigurations/items",
                "type": "object",
                "properties": {
                    "id": {
                        "$id": "/properties/mediaStorageConfigurations/items/properties/id",
                        "type": "string",
                        "title": "The id of the media storage"
                    },
                    "name": {
                        "$id": "/properties/mediaStorageConfigurations/items/properties/name",
                        "type": "string",
                        "title": "The name of the media storage"
                    },
                    "mediaRootDir": {
                        "$id": "/properties/mediaStorageConfigurations/items/properties/path",
                        "type": "string",
                        "title": "The path of the media storage"
                    },
                    "private": {
                        "$id": "/properties/mediaStorageConfigurations/items/properties/private",
                        "type": "boolean",
                        "title": "Flag if the media storage is private",
                        "default": false,
                        "examples": [
                            true
                        ]
                    },
                    "supportedMediaCategoryIds": {
                        "$id": "/properties/mediaStorageConfigurations/items/properties/supportedMediaCategoryIds",
                        "type": "array",
                        "items": {
                            "$id": "/properties/mediaStorageConfigurations/items/properties/supportedMediaCategoryIds/items",
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}