{
    "$id": "http://www.drombler.org/drombler-media-core/MediaStorageConfig.json",
    "type": "object",
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "mediaStorageConfigurations": {
            "$id": "/properties/mediaStorageConfigurations",
            "type": "array",
            "items": {
                "$id": "/properties/mediaStorageConfigurations/items",
                "type": "object",
                "properties": {

                    "name": {
                        "$id": "/properties/mediaStorageConfigurations/items/properties/mediaStorageConfiguration/items/properties/name",
                        "type": "string",
                        "title": "The name of the media storage"
                    },
                    "mediaRootDir": {
                        "$id": "/properties/mediaStorageConfigurations/items/properties/mediaStorageConfiguration/items/properties/path",
                        "type": "string",
                        "title": "The path of the media storage"
                    },
                    "private": {
                        "$id": "/properties/mediaStorageConfigurations/items/properties/mediaStorageConfiguration/items/properties/private",
                        "type": "boolean",
                        "title": "Flag if the media storage is private",
                        "default": false,
                        "examples": [
                            true
                        ]
                    }
                }
            }
        }
    }
}